<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/messdetails"
    android:layout_height="wrap_content"
    android:background="#F8C4C4">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="5dp"
        android:text="Simple Title Text"
        android:textColor="@color/title_text_color"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="8dp"
        android:text="Development is a process rather than an outcome- it is dynamic it involves changing from one state to another state or condition Development is a process rather than an outcome"
        android:textColor="#000"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/idd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="16dp"
        android:text="2019-09-19"
        android:visibility="gone"
        android:textColor="@color/content_text_color"
        tools:ignore="UnknownId" />
<Space
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_below="@id/description"/>
</RelativeLayout>